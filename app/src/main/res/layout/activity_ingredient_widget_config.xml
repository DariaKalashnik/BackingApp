<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kalas.backingapp.activities.IngredientWidgetActivityConfig">

    <EditText
        android:id="@+id/recipe_enter_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/value_16dp"
        android:layout_marginLeft="@dimen/value_16dp"
        android:layout_marginRight="@dimen/value_16dp"
        android:layout_marginStart="@dimen/value_16dp"
        android:layout_marginTop="180dp"
        android:hint="Enter Recipe Name"
        android:padding="@dimen/value_16dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recipe_enter_field"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/value_16dp"
        android:backgroundTint="@color/colorPrimaryLight"
        android:shadowRadius="2"
        android:text="Get Ingredients"
        android:textColor="@color/colorSecondaryText" />
</RelativeLayout>
